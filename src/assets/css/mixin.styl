border-1px($color)
  &:after
    display block
    position absolute
    left 0
    bottom  0
    width 100%
    border-top  1px solid $color
    content ''
  &:before
    display block
    position absolute
    left 0
    top  0
    width 100%
    border-top  1px solid $color
    content ''
border-none()
  &:after
    display none
bg-image($url)  //定义背景圖片css变量：使用方法   &.类名  bg-image('路径')
  background-image url($url+'@2x.png')
  @media (-webkit-min-device-pixel-ratio:3),(-min-device-pixel-ratio:3)
    background-image url($url+'@3x.png')

